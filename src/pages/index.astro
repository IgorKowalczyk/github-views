---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Description from "../components/Description.astro";
---

<Layout title="Profile views - create your own badges">
 <main>
  <Header text="Profile views" />
  <Description text="Create your own badge that will count views anywhere you want!" />
  <div class="flex flex-row gap-2 mt-2 mb-6">
   <input id="name" class="w-full rounded-lg border-[1px] outline-none duration-200 border-white/20 bg-transparent text-white focus:border-blue-500" type="text" placeholder="Your username" value="" />
   <button id="submit" class="group rounded-md border border-transparent px-4 py-2 font-inter text-sm font-medium duration-200 motion-reduce:transition-none bg-white/[10%] text-white hover:bg-white/[15%]"><span class="mt-[2px] inline-flex">Create <svg class="mt-[2px] ml-2 h-4 w-4 duration-200 group-hover:translate-x-1 motion-reduce:transition-none motion-reduce:group-hover:translate-x-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6"></path></svg></span></button>
  </div>

  <Header text="Examples" />
  <table class="border border-white/10 p-2">
   <thead>
    <tr>
     <th>Style</th>
     <th>Default badge</th>
     <th>Color</th>
     <th>Custom text & color</th>
    </tr>
   </thead>
   <tbody>
    <tr>
     <td>
      <pre>flat-square</pre>
     </td>
     <td>
      <img alt="Badge" src={"/api/badge/example?style=flat-square&display=true"} width={100} height={20} class="h-auto w-auto" />
     </td>
     <td>
      <img alt="Badge" src={"/api/badge/example?style=flat-square&color=blue&display=true"} width={100} height={20} class="h-auto w-auto" />
     </td>
     <td>
      <img alt="Badge" src={"/api/badge/example?style=flat-square&color=blueviolet&label=Custom+text&display=true"} width={100} height={20} class="h-auto w-auto" />
     </td>
    </tr>

    <tr>
     <td>
      <pre>flat</pre>
     </td>
     <td>
      <img alt="Badge" src={"/api/badge/example?style=flat&display=true"} width={100} height={20} class="h-auto w-auto" />
     </td>
     <td>
      <img alt="Badge" src={"/api/badge/example?style=flat&color=blue&display=true"} width={100} height={20} class="h-auto w-auto" />
     </td>
     <td>
      <img alt="Badge" src={"/api/badge/example?style=flat&color=blueviolet&label=Custom+text&display=true"} width={100} height={20} class="h-auto w-auto" />
     </td>
    </tr>

    <tr>
     <td>
      <pre>plastic</pre>
     </td>
     <td>
      <img alt="Badge" src={"/api/badge/example?style=plastic&display=true"} width={100} height={20} class="h-auto w-auto" />
     </td>
     <td>
      <img alt="Badge" src={"/api/badge/example?style=plastic&color=blue&display=true"} width={100} height={20} class="h-auto w-auto" />
     </td>
     <td>
      <img alt="Badge" src={"/api/badge/example?style=plastic&color=blueviolet&label=Custom+text&display=true"} width={100} height={20} class="h-auto w-auto" />
     </td>
    </tr>

    <tr>
     <td>
      <pre>for-the-badge</pre>
     </td>
     <td>
      <img alt="Badge" src={"/api/badge/example?style=for-the-badge&display=true"} width={100} height={20} class="h-auto w-auto" />
     </td>
     <td>
      <img alt="Badge" src={"/api/badge/example?style=for-the-badge&color=blue&display=true"} width={100} height={20} class="h-auto w-auto" />
     </td>
     <td>
      <img alt="Badge" src={"/api/badge/example?style=for-the-badge&color=blueviolet&label=Custom+text&display=true"} width={100} height={20} class="h-auto w-auto" />
     </td>
    </tr>

    <tr>
     <td>
      <pre>social</pre>
     </td>
     <td>
      <img alt="Badge" src={"/api/badge/example?style=social&display=true"} width={100} height={20} class="h-auto w-auto" />
     </td>
     <td>No color</td>
     <td>
      <img alt="Badge" src={"/api/badge/example?style=social&label=Custom+text&display=true"} width={100} height={20} class="h-auto w-auto" />
     </td>
    </tr>
   </tbody>
  </table>

  <p class="my-4 font-medium text-center">
   Looking for more customizations? <a href="https://github.com/igorkowalczyk/views" target="_blank" class="underline">Check out the documentation</a>.
  </p>
 </main>
</Layout>
