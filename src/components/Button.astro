---
export interface Props {
 body: string;
 href: string;
}

const { href, body } = Astro.props;
---

<a href={href} class="group mt-2 mx-auto flex rounded-md w-fit border border-transparent bg-blue-100 px-4 py-2 font-inter text-sm font-medium text-blue-900 duration-200 hover:bg-blue-200 motion-reduce:transition-none dark:bg-white/[10%] dark:text-white dark:hover:bg-white/[15%]">
 {body}
</a>
